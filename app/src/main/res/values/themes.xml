<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RickAndMorty" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/lightAcidGreen</item>
        <item name="colorPrimaryDark">@color/darkAcidGreen</item>
        <item name="colorSecondary">@color/acidBlue</item>
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="colorOnPrimary">@color/acidBlue</item>
        <item name="colorOnSurface">@color/acidBlue</item>
        <item name="colorOnPrimarySurface">@color/acidBlue</item>
        <item name="materialButtonStyle">@style/botones</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationView</item>
        <item name="textAppearanceTitleLarge">@style/titulosFragmentsIndividuales</item>

    </style>

    <style name="Theme.RickAndMorty" parent="Base.Theme.RickAndMorty" />

    <style name="titulosFragmentsIndividuales" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/rickandmorty_font</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/grey900</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">32dp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="backgroundTint">@color/darkAcidGreen</item>
        <item name="navigationIconTint">@color/acidBlue</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="ActiveTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">4dp</item> <!-- Ajusta este valor para mÃ¡s espacio -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="titulosFragments">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/acidBlue</item>
    </style>

    <style name="botones" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/lightAcidGreen</item>
        <item name="android:textColor">@color/darkAcidGreen</item>
    </style>
</resources>