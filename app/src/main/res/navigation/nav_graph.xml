<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/episodiosFragment"
        android:name="com.example.rickandmorty.EpisodiosFragment"
        android:label="fragment_episodios"
        tools:layout="@layout/fragment_episodios" >
        <action
            android:id="@+id/action_episodiosFragment_to_localizacionesFragment"
            app:destination="@id/localizacionesFragment" />
        <action
            android:id="@+id/action_episodiosFragment_to_personajesFragment"
            app:destination="@id/personajesFragment" />
    </fragment>
    <fragment
        android:id="@+id/localizacionesFragment"
        android:name="com.example.rickandmorty.LocalizacionesFragment"
        android:label="fragment_localizaciones"
        tools:layout="@layout/fragment_localizaciones" >
        <action
            android:id="@+id/action_localizacionesFragment_to_episodiosFragment"
            app:destination="@id/episodiosFragment" />
        <action
            android:id="@+id/action_localizacionesFragment_to_personajesFragment"
            app:destination="@id/personajesFragment" />
    </fragment>
    <fragment
        android:id="@+id/personajesFragment"
        android:name="com.example.rickandmorty.PersonajesFragment"
        android:label="fragment_personajes"
        tools:layout="@layout/fragment_personajes" >
        <action
            android:id="@+id/action_personajesFragment_to_localizacionesFragment"
            app:destination="@id/localizacionesFragment" />
        <action
            android:id="@+id/action_personajesFragment_to_episodiosFragment"
            app:destination="@id/episodiosFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.rickandmorty.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_episodiosFragment"
            app:destination="@id/episodiosFragment" />
        <action
            android:id="@+id/action_homeFragment_to_localizacionesFragment"
            app:destination="@id/localizacionesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_personajesFragment"
            app:destination="@id/personajesFragment" />
    </fragment>
</navigation>